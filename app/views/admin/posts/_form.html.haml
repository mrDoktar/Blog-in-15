- stylesheet "posts"
- javascript "elastic"

= form_for [:admin, @post] do |f|
  = f.label :title
  = f.text_field :title
  = f.label :tag_list
  = f.text_field :tag_list
  = f.label :intro
  = f.text_area :intro
  = f.label :body
  = f.text_area :body
  = f.label :published_on
  = f.date_select :published_on
  %br
  = f.submit "Save", :class => "button medium"
  
:javascript
  $('textarea').elastic();